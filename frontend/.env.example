# Frontend Environment Variables
# Copy this to .env.local and fill in your values

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:3001/api
REACT_APP_SOCKET_URL=http://localhost:3001

# External API Keys
REACT_APP_OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here
REACT_APP_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here

# App Configuration
REACT_APP_NAME=CrisisLink
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Location Defaults (South Africa)
REACT_APP_DEFAULT_LAT=-26.2041
REACT_APP_DEFAULT_LNG=28.0473
REACT_APP_DEFAULT_ZOOM=10

# Features
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_VIBRATION=true
REACT_APP_WEATHER_UPDATE_INTERVAL=300000

# Debug
REACT_APP_DEBUG_MODE=true