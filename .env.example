# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/crisislink_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crisislink_db
DB_USER=username
DB_PASSWORD=password

# API Keys
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Server Configuration
PORT=3001
NODE_ENV=development
JWT_SECRET=your_jwt_secret_here
CORS_ORIGIN=http://localhost:3000

# External Services
EMERGENCY_DISPATCH_API=your_emergency_dispatch_api_url
WEATHER_UPDATE_INTERVAL=300000
ALERT_RADIUS_KM=50

# Geospatial Configuration
DEFAULT_LATITUDE=-26.2041
DEFAULT_LONGITUDE=28.0473
SOUTH_AFRICA_BOUNDS="-35,-25,16,33"